<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <persistence-unit name="app-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Valgfrit: <class>app.entities.User</class> osv. -->
        <properties>
            <!-- Bliver overstyret af JPAConfig.runtimeOverrides(...) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/app"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <!-- Hibernate schema-hÃ¥ndtering styres via JPAConfig (update/validate/create-drop) -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
